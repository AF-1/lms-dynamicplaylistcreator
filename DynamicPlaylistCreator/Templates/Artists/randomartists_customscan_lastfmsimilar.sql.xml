<?xml version="1.0" encoding="utf-8"?>
<dynamicplaylistcreator>
	<requireplugins>CustomScan</requireplugins>
	<template>
		<name>Random for LastFM Similar Artists</name>
		<description>Random tracks with artist similar to user selectable artist according to LastFM.</description>
		<playlistcategory>artists</playlistcategory>
		<listweight>4</listweight>
		<usecache>1</usecache>
		<parameter type="text" id="playlistname" name="Playlist &lt;b&gt;name&lt;/b&gt;" value="Random for LastFM Similar Artists"/>
		<parameter type="text" id="playlistgroups" name="Playlist &lt;b&gt;group&lt;/b&gt;" value="Dynamic Playlist Creator"/>
		<parameter type="checkbox" id="notrepeat" name="Do &lt;b&gt;not repeat&lt;/b&gt; tracks within same playlist" value="1"/>
		<parameter type="text" id="similaritypercent" name="Minimum similarity percent (1-100)" value=""/>
		<parameter type="checkbox" id="toprated" name="Select &lt;b&gt;top rated&lt;/b&gt; tracks" value=""/>
		<parameter type="checkbox" id="notrated" name="Select &lt;b&gt;only unrated&lt;/b&gt; tracks" value=""/>
		<parameter type="text" id="nooftracks" name="Number of tracks added per batch" value="15"/>
		<parameter type="functionoptionalsinglelist" id="customskipfilter" requireplugins="CustomSkip3::Plugin" name="&lt;b&gt;Custom Skip&lt;/b&gt; filter set" value="" data="Plugins::CustomSkip3::Plugin,getAvailableFilters"/>
	</template>
</dynamicplaylistcreator>
